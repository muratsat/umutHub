<body>
    <div class="container">
        <h1>Проекты</h1>
        
        <form class="search-form" action="/admin/projects" method="GET">
            <input type="text" name="search" value="<%= locals.searchQuery || '' %>" placeholder="Поиск проектов...">
            <button type="submit" class="btn btn-search">Поиск</button>
        </form>
        <div class="actions-container">
            
            
            <a href="/admin/projects/create" class="btn btn-create">Создать проект</a>
        </div>
        <% if (locals.projects && projects.length > 0) { %>
            <table class="schools-table">
                <thead>
                    <tr>
                        <th class="sortable" data-sort="id">
                            <div class="th-content">
                                ID <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="name">
                            <div class="th-content">
                                Название <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="school">
                            <div class="th-content">
                                Школа <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="count">
                            <div class="th-content">
                                Кол. участников <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach((projectItem, index) => { %>
                        <tr data-pupil-id="<%= projectItem._id %>">
                            <td><%= (currentPage - 1) * limit + index + 1 %></td>
                            <td><%= projectItem.name %></td>
                            <td><%= projectItem.schoolName %></td>
                            <td><%= projectItem.inProjectUserCount %></td>
                            <td>
                                <a href="/admin/projects/<%= projectItem._id %>/edit" class="btn btn-edit" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-deleteProject" data-project-id="<%= projectItem._id %>" title="Удалить">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>   
            
            <div class="pagination" 
                 data-current-page="<%= currentPage %>" 
                 data-total-pages="<%= totalPages %>">
                <!-- Содержимое будет динамически обновляться с помощью JavaScript -->
            </div>
            
        <% } else { %>
            <p class="no-classes">Опросы не найдены.</p>
        <% } %>
    </div>
</body>
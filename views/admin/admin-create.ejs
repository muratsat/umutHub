<body></body>
    <main class="container">
        <h1>Создание админа</h1>
        
        <form action="/admin/create" method="POST" class="edit-school-form">
            <% if (locals.error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            <div class="form-group">
            <label for="school">Школа:</label>
            <select id="school" name="schoolId" required>
                <% if (schools.length!=1) { %>
                    <option value="">Выберите школу</option>
                <% } %>
                <% schools.forEach(function(school) { %>
                    <option value="<%= school._id %>" <%= locals.formData && formData.schoolId == school._id ? 'selected' : '' %>>
                        <%= school.name %>
                    </option>
                <% }); %>
            </select>
        </div>
            <div class="form-group">
                <label for="name">Имя:</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="surname">Фамилия:</label>
                <input type="text" id="surname" name="surname" required>
            </div>

            <div class="form-group">
                <label for="surname">Email:</label>
                <input type="text" id="email" name="email" required>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a href="/admin/list" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </main>
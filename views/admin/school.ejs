<div class="container">
    <div class="school-container">
        <h1><%= school.name %></h1>
        <p><strong>Описание:</strong> <%= school.description %></p>
        
        <div class="school-stats">
            <a href="/admin/schools/<%= school._id %>/classes" class="stat-card">
                <h3>Классы</h3>
                <p><%= classCount %></p>
            </a>
            <a href="/admin/schools/<%= school._id %>/students" class="stat-card">
                <h3>Ученики</h3>
                <p><%= studentCount %></p>
            </a>
            <a href="/admin/schools/<%= school._id %>/admins" class="stat-card">
                <h3>Администраторы</h3>
                <p><%= teacherCount %></p>
            </a>
            <a href="/admin/schools/<%= school._id %>/surveys" class="stat-card">
                <h3>Опросы</h3>
                <p><%= teacherCount %></p>
            </a>
            <a href="/admin/schools/<%= school._id %>/surveys" class="stat-card">
                <h3>Проекты</h3>
                <p><%= teacherCount %></p>
            </a>
            <a href="/admin/schools/<%= school._id %>/surveys" class="stat-card">
                <h3>Календарь события</h3>
                <p><%= teacherCount %></p>
            </a>
        </div>

        <h2>Администраторы школы</h2>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% schoolAdmins.forEach(admin => { %>
                    <tr>
                        <td><%= admin.name %></td>
                        <td><%= admin.email %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="actions">
            <a href="/admin/schools/<%= school._id %>/edit" class="btn btn-primary">Редактировать информацию</a>
            <a href="/admin/schools/<%= school._id %>/classes" class="btn btn-secondary">Управление классами</a>
        </div>
    </div>
</div>
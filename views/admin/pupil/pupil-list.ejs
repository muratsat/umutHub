<body>
    <div class="container">
        <h1>Ученики</h1>
        
        <form class="search-form" action="/admin/pupils" method="GET">
            <input type="text" name="search" value="<%= locals.searchQuery || '' %>" placeholder="Поиск учеников по почте...">
            <button type="submit" class="btn btn-search">Поиск</button>
        </form>
        <% if (locals.pupils && pupils.length > 0) { %>
            <table class="schools-table">
                <thead>
                    <tr>
                        <th class="sortable" data-sort="id">
                            <div class="th-content">
                                ID <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="name">
                            <div class="th-content">
                                ФИО <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="school">
                            <div class="th-content">
                                Школа <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="school">
                            <div class="th-content">
                                Баллы <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th class="sortable" data-sort="studentCount">
                            <div class="th-content">
                                Email <span class="sort-icon">&#x25B2;</span>
                            </div>
                        </th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% pupils.forEach((pupilItem, index) => { %>
                        <tr data-pupil-id="<%= pupilItem._id %>">
                            <td><%= (currentPage - 1) * limit + index + 1 %></td>
                            <td><%= pupilItem.name %> <%= pupilItem.surname %></td>
                            <td><%= pupilItem.schoolName %></td>
                            <td><%= pupilItem.rating %></td>
                            <td><%= pupilItem.email %></td>
                            <td>
                                <a href="/admin/pupils/<%= pupilItem._id %>/edit" class="btn btn-edit" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-deletePupil" data-pupil-id="<%= pupilItem._id %>" title="Удалить">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>   
            
            <div class="pagination" 
                 data-current-page="<%= currentPage %>" 
                 data-total-pages="<%= totalPages %>">
                <!-- Содержимое будет динамически обновляться с помощью JavaScript -->
            </div>
            
            
        <% } else { %>
            <p class="no-classes">Ученики не найдены.</p>
        <% } %>
    </div>
</body>